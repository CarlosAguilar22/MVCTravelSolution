@model IEnumerable<MVCTravels.NET_2017.Models.TravelModel>

@{
    ViewBag.Title = "Lista de viajes";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo viaje", "CreateTravel")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.ActionLink("Editar viaje", "EditTravel", new { id=item.Id }) |
            @Html.ActionLink("Detalles del viaje", "TravelDetails", new { id = item.Id }) |
            @Html.ActionLink("Borrar viaje", "DeleteTravel", new { id = item.Id })
        </td>
    </tr>
}

</table>
